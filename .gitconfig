[user]
	name = Milan Malfait
	email = 38256462+milanmlft@users.noreply.github.com
	signingkey = 407EA34B4A27A1E7
[core]
	autocrlf = false
	safecrlf = true
	excludesfile = /Users/milan/.gitignore_global
    pager = delta
[alias]
    co = checkout
    st = status
    br = branch
    hist = "log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short"
    type = cat-file -t
    dump = cat-file -p
    unstage = reset HEAD --
    last = log -p -n 1
    ci = commit -v
    can = commit -v --amend --no-edit
    staash = stash --all
    bb = !better-git-branch.sh
    pushfwl = push --force-with-lease
    rpo = remote prune origin
[commit]
	template = /Users/milan/.stCommitMsg
	gpgsign = true
[push]
	default = current
[merge]
	tool = vimdiff
[diff]
	tool = vimdiff
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[filesystem "AdoptOpenJDK|1.8.0_232|/dev/disk1s2"]
	timestampResolution = 1001 milliseconds
	minRacyThreshold = 0 nanoseconds
[pull]
	rebase = false
[init]
	defaultBranch = main
[gpg]
	program = /opt/homebrew/bin/gpg
[maintenance]
	repo = /Users/milan
	repo = /Users/milan/github/milanmlft
	repo = /Users/milan/Projects/SAFEHR-data/crdm-tools
	repo = /Users/milan/Projects/CodeMiner/codemapper
[rerere]
	enabled = true
[column]
	ui = auto
[branch]
	sort = -committerdate
[fetch]
	prune = true
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true  # use n and N to move between diff sections
    dark = true      # or light = true, or omit for auto-detection
    features = arctic-fox
[include]
    path = ~/.config/delta/themes.gitconfig
[merge]
    conflictstyle = zdiff3
